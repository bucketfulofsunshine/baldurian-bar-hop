IF 
	GlobalLT("BFSCRTALKED","GLOBAL",1)
	Global("BFSCRBARK","GLOBAL",0)
	See([PC])
THEN
	RESPONSE #100
	  SetGlobal("BFSCRBARK","GLOBAL",1)
	  DisplayString(Myself,@0)
	  Wait(10)
	  DisplayString(Myself,@1)
	  Wait(10)
	  DisplayString(Myself,@2)
	  Wait(10)
	  DisplayString(Myself,@3)	
	  Continue()
END 
